<PopSave@Popup>:
    title: "Save Output File"
    auto_dismiss: False
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        TextInput:
            id: text_input
            size_hint_y: .1
            height: 30
            multiline: False
        BoxLayout:
            size_hint_y: .2
            height: 30
            Button:
                text: "Cancel"
                on_release:
                    root.dismiss()

            Button:
                text: "Save"
                on_release:
                    app.ListView_.Save(filechooser.path, text_input.text)
                    root.dismiss()

<PopLoad@Popup>:
