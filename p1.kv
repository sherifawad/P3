<Adv@Popup>:
    title: "Advanced Options"
    auto_dismiss: False
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        TextInput:
            size_hint_y: .2
            id: Secret
            hint_text: "Secret Value"

        Label:
            size_hint_y: .1
            text: "Public Values"
        TextInput:
            size_hint_y: .2
            id: X_C
            hint_text: "X Coordinate"
        TextInput:
            size_hint_y: .2
            id: Y_C
            hint_text: "Y Coordinate"
        TextInput:
            size_hint_y: .2
            id: Y_ID
            hint_text: "Your ID"
        TextInput:
            size_hint_y: .2
            id: R_ID
            hint_text: "Receiver ID"
        BoxLayout:
            size_hint_y: .2
            height: 30
            Button:
                text: "Cancel"
                on_release:
                    app.Var_.VEntry(Secret, X_C, Y_C, Y_ID, R_ID)
                    root.dismiss()

            Button:
                text: "Submit"
                on_release:
                    app.Var_.VEntry(Secret, X_C, Y_C, Y_ID, R_ID)
                    root.dismiss()

SManagement:
    transition: FadeTransition()
    Home_:
    Send_:
    Receive_:
    ListView_:

<Home_>:
    name: "Home"
    BoxLayout:
        orientation: "vertical"
        Button:
		    on_release: app.root.current = "send"
		    text: "Send"
        Button:
		    on_release: app.root.current = "receive"
		    text: "Receive"

<Send_>:
    name: "send"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Button:
                pos_hint: {"x": 0, "top": 1}
                on_release: app.root.current = "Home"
                text: "Back Home"
            Button:
                pos_hint: {"x": 0, "top": 1}
                on_release: app.root.current = "receive"
                text: " Go to Receive"
        Button:
            text: "choose Messages"
            on_release: Factory.PopLoad().open()

        BoxLayout
            orientation: "horizontal"
            padding: 10
            spacing: 10
            ToggleButton:
                id: Steganography
                text: "Use Steganography"
                on_state:
                    steg.disabled = False if self.state == 'down' else True
            Button:
                id: steg
                text: "browse"
                disabled: True
                on_release: Factory.ImgLoad().open()

        Button:
            text: "Advanced Options"
            on_release: Factory.Adv().open()
        Button:
            text: "Output File Save Location"
            on_release: Factory.PopSave().open()
        Button:
            id: Execute
            text: "Execute"
            on_release:
                root.Exsend_()
                Factory.SFinish().open()

<Receive_>:
    name: "receive"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            Button:
                pos_hint: {"x": 0, "top": 1}
                on_release: app.root.current = "Home"
                text: "Back Home"
            Button:
                pos_hint: {"x": 0, "top": 1}
                on_release: app.root.current = "send"
                text: " Go to Send"
        Button:
            text: "choose Messages"
            on_release: Factory.RImgLoad().open()

        Button:
            text: "Advanced Options"
            on_release: Factory.Adv().open()
        Button:
            text: "Output File Save Location"
            on_release: Factory.PopSave().open()
        Button:
            id: Execute
            text: "Execute"
            on_release:
                root.Exreceive_()
